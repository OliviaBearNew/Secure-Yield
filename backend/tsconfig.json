{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "types": ["node", "hardhat"],
    "outDir": "dist",
    "skipLibCheck": true
  },
  "include": [
    "hardhat.config.ts",
    "deploy/**/*.ts",
    "tasks/**/*.ts",
    "scripts/**/*.ts"
  ]
}

